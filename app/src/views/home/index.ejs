<!DOCTYPE html>
<html lang="kr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>B/O App. - WashSwat</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="/js/home/show_items.js"></script>
    <script src="/js/home/delete_order.js"></script>
</head>
<body>
    <!-- 네비게이션바 -->
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <span class="navbar-text">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
            </svg>
          </span>
        </div>
    </nav>

    <!-- 메인 컨테이너 -->
    <div class="container-fluid">

        <div class="row flex-nowrap text-center">
            <% for(var i=0; i < data.length; i++) { %>
            <div class="col-lg-1 fs-4">

                <!-- 카테고리 정보 -->
                <div class="card border-primary mb-3"">

                    <!-- 카테고리 이름 -->
                    <div class="card-header">
                        <h6><%= data[i].categoryName %></h6>
                    </div>

                    <!-- 카테고리별 주문 개수 -->
                    <div>
                        <h6><%= data[i].orderCount %></h6>
                    </div>

                </div>

                <!-- 주문 리스트 -->
                <div>
                    <% for(var j=0; j < data[i].orders.length; j++) { %>
                        <% const orderId = data[i].orders[j].id %>
                        <% const itemCount = data[i].orders[j].item_cnt %>

                    <!-- 주문 정보 -->
                    <div id="box-<%=orderId%>" class="card border-dark mb-3">

                        <!-- 주문 버튼 -->
                        <button id="<%=orderId%>" class="btn btn-primary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#itemlist-<%=orderId%>"
                            aria-expanded="false" aria-controls="itemlist-<%=orderId%>" onclick="showItems('<%=orderId%>');">

                            <!-- 주문 아이디 -->
                            <span><%= orderId %></span>

                            <!-- 아이템 개수 -->
                            <span class="badge bg-info text-dark"><%=itemCount%></span>

                            <!-- 주문 삭제 버튼 -->
                            <span onclick="delete_order('<%=orderId%>');">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
                                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                </svg>
                            </span>
                        </button>

                        <!-- 아이템 리스트 -->
                        <div class="collapse" id="itemlist-<%=orderId%>">
                        </div>
                    </div>

                    <% } %>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>